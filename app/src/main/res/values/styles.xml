<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/merriweather_bold</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="PhrasePad.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="PhrasePad.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="bottomSheetStyle">@style/PhrasePad.BottomSheetDialog.Sheet</item>
    </style>

    <style name="PhrasePad.BottomSheetDialog.Sheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/PhrasePad.BottomSheetDialog.Sheet.Overlay</item>
    </style>

    <style name="PhrasePad.BottomSheetDialog.Sheet.Overlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="PhrasePad.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:layout_gravity">bottom</item>
        <item name="labelVisibilityMode">selected</item>
    </style>
</resources>