<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Languages">

        <ListPreference
            android:entries="@array/languages"
            android:entryValues="@array/languages"
            android:key="source_lang"
            android:title="Source Language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:entries="@array/languages"
            android:entryValues="@array/languages"
            android:key="dest_lang"
            android:title="Destination Language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Data management">

        <Preference
            android:title="Clear all data"
            android:key="clear_all"
            android:summary="Clear all app data" />

    </PreferenceCategory>

</PreferenceScreen>